<body>
    <div class="container">
        <header>
            <h1>黑铁音频：顺序播放器</h1>
            <p class="subtitle">按目录顺序播放，支持记忆播放位置</p>
        </header>
        
        <div class="main-content">
            <section class="player-section">
                <div class="audio-info">
                    <h2 class="audio-title">请选择音频目录</h2>
                    <p class="audio-duration">--:-- / --:--</p>
                </div>
                
                <div class="player-controls">
                    <div class="progress-container">
                        <div class="progress-bar"></div>
                    </div>
                    
                    <div class="time-display">
                        <span class="current-time">00:00</span>
                        <span class="total-time">00:00</span>
                    </div>
                    
                    <div class="control-buttons">
                        <button id="prev-btn">上一首</button>
                        <button id="play-pause-btn">播放</button>
                        <button id="next-btn">下一首</button>
                    </div>
                </div>
                
                <div class="directory-selector">
                    <button id="select-dir-btn">选择音频文件夹</button>
                    <button id="reselect-dir-btn" style="display:none;">重新选择文件夹</button>
                    <div class="current-directory" id="current-dir">未选择文件夹</div>
                </div>
                
                <!-- 隐藏的音频元素 -->
                <audio id="audio-element" class="audio-element"></audio>
            </section>
            
            <section class="playlist-section">
                <h3 class="playlist-title">播放列表</h3>
                <div class="empty-state" id="empty-state">
                    <i>♪</i>
                    <p>暂无音频文件，请选择目录</p>
                </div>
                <ul class="playlist" style="display: none;"></ul>
            </section>
        </div>
        
        <footer>
            <p>黑铁音频：顺序播放器 &copy; 2025 | 支持MP3、M4A、WAV等格式</p>
        </footer>
    </div>

    <script>
        // 应用状态
        const state = {
            audioFiles: [],
            currentIndex: 0,
            isPlaying: false,
            currentTime: 0,
            duration: 0,
            selectedDirectory: null,
            directoryPath: localStorage.getItem('audioDirectoryPath') || null
        };

        // DOM元素
        const audioTitle = document.querySelector('.audio-title');
        const audioDuration = document.querySelector('.audio-duration');
        const progressBar = document.querySelector('.progress-bar');
        const progressContainer = document.querySelector('.progress-container');
        const currentTimeEl = document.querySelector('.current-time');
        const totalTimeEl = document.querySelector('.total-time');
        const playPauseBtn = document.getElementById('play-pause-btn');
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        const selectDirBtn = document.getElementById('select-dir-btn');
        const reselectDirBtn = document.getElementById('reselect-dir-btn');
        const currentDirEl = document.getElementById('current-dir');
        const playlistEl = document.querySelector('.playlist');
        const emptyState = document.getElementById('empty-state');
        const audioElement = document.getElementById('audio-element');

        // 初始化应用
        function initApp() {
            // 检查是否有保存的目录
            if (state.directoryPath) {
                currentDirEl.textContent = `已选择: ${state.directoryPath}`;
                selectDirBtn.style.display = 'none';
                reselectDirBtn.style.display = 'block';
                
                // 在APK环境中，我们可以直接访问之前选择的目录
                loadAudioFilesFromPath(state.directoryPath);
            }
            
            // 设置事件监听器
            setupEventListeners();
        }

        // 设置事件监听器
        function setupEventListeners() {
            playPauseBtn.addEventListener('click', togglePlayPause);
            prevBtn.addEventListener('click', playPrevious);
            nextBtn.addEventListener('click', playNext);
            selectDirBtn.addEventListener('click', selectDirectory);
            reselectDirBtn.addEventListener('click', selectDirectory);
            progressContainer.addEventListener('click', setProgress);
            
            // 音频元素事件
            audioElement.addEventListener('loadedmetadata', updateDuration);
            audioElement.addEventListener('timeupdate', updateProgress);
            audioElement.addEventListener('ended', playNext);
        }

        // 选择目录
        function selectDirectory() {
            // 在APK环境中，使用Cordova文件选择器
            if (window.cordova && window.fileChooser) {
                fileChooser.open({}, function(uri) {
                    // 获取选择的目录路径
                    state.directoryPath = uri;
                    localStorage.setItem('audioDirectoryPath', uri);
                    currentDirEl.textContent = `已选择: ${uri}`;
                    selectDirBtn.style.display = 'none';
                    reselectDirBtn.style.display = 'block';
                    
                    loadAudioFilesFromPath(uri);
                }, function(error) {
                    console.error('选择目录失败:', error);
                    alert('选择目录失败，请重试');
                });
            } 
        }

        // 从路径加载音频文件
        function loadAudioFilesFromPath(path) {
            if (window.cordova && window.fileOpener2) {
                // 使用Cordova文件插件读取目录
                window.resolveLocalFileSystemURL(path, function(dirEntry) {
                    const reader = dirEntry.createReader();
                    reader.readEntries(function(entries) {
                        const audioFiles = entries.filter(entry => {
                            return entry.isFile && isAudioFile(entry.name);
                        });
                        
                        if (audioFiles.length === 0) {
                            alert('选择的文件夹中没有找到音频文件！');
                            return;
                        }
                        
                        // 按文件名排序
                        audioFiles.sort((a, b) => a.name.localeCompare(b.name));
                        
                        // 转换为文件对象
                        state.audioFiles = audioFiles.map(entry => {
                            return {
                                name: entry.name,
                                fullPath: entry.fullPath,
                                nativeURL: entry.nativeURL
                            };
                        });
                        
                        // 恢复上次播放位置
                        const savedIndex = localStorage.getItem('currentAudioIndex');
                        if (savedIndex !== null) {
                            state.currentIndex = parseInt(savedIndex);
                        }
                        
                        updateUI();
                        
                    }, function(error) {
                        console.error('读取目录失败:', error);
                        alert('读取目录失败');
                    });
                }, function(error) {
                    console.error('访问目录失败:', error);
                    alert('访问目录失败');
                });
            } else 
        }

=
            // 恢复上次播放位置
            const savedIndex = localStorage.getItem('currentAudioIndex');
            if (savedIndex !== null) {
                state.currentIndex = parseInt(savedIndex);
            }
=
        // 检查是否为音频文件
        function isAudioFile(filename) {
            const audioExtensions = ['.mp3', '.wav', '.ogg', '.m4a', '.aac', '.flac'];
            const extension = filename.toLowerCase().substring(filename.lastIndexOf('.'));
            return audioExtensions.includes(extension);
        }

        // 更新UI
        function updateUI() {
            updatePlaylist();
            
            // 显示播放列表，隐藏空状态
            playlistEl.style.display = 'block';
            emptyState.style.display = 'none';
            
            // 如果之前有播放记录，显示该音频信息
            if (state.audioFiles.length > 0 && state.currentIndex >= 0) {
                updateAudioInfo(state.currentIndex);
            }
        }

        // 更新播放列表
        function updatePlaylist() {
            playlistEl.innerHTML = '';
            
            state.audioFiles.forEach((file, index) => {
                const li = document.createElement('li');
                li.className = `playlist-item ${index === state.currentIndex ? 'active' : ''}`;
                li.innerHTML = `
                    <span class="item-title">${file.name}</span>
                    <span class="item-duration">--:--</span>
                `;
                
                li.addEventListener('click', () => {
                    playAudio(index);
                });
                
                playlistEl.appendChild(li);
            });
        }

        // 更新音频信息
        function updateAudioInfo(index) {
            const currentAudio = state.audioFiles[index];
            audioTitle.textContent = currentAudio.name;
            
            // 在APK环境中，使用nativeURL或fullPath播放
            if (window.cordova) {
                audioElement.src = currentAudio.nativeURL || currentAudio.fullPath;
            } else {
                // 模拟播放（用于测试）
                audioElement.src = "https://www.soundhelix.com/examples/mp3/SoundHelix-Song-1.mp3";
            }
            
            // 更新播放列表中的活动项
            updatePlaylist();
            
            // 更新播放按钮
            playPauseBtn.textContent = '暂停';
            
            // 保存当前播放位置
            localStorage.setItem('currentAudioIndex', index);
        }

        // 播放音频
        function playAudio(index) {
            if (index < 0 || index >= state.audioFiles.length) return;
            
            // 停止当前播放
            audioElement.pause();
            state.isPlaying = false;
            
            state.currentIndex = index;
            
            // 更新当前播放的音频信息
            updateAudioInfo(index);
            
            // 播放音频
            audioElement.play().then(() => {
                state.isPlaying = true;
                playPauseBtn.textContent = '暂停';
            }).catch(error => {
                console.error('播放错误:', error);
                alert('播放音频时出错，请检查文件格式或尝试其他文件。');
            });
        }

        // 更新音频时长
        function updateDuration() {
            state.duration = audioElement.duration;
            totalTimeEl.textContent = formatTime(state.duration);
            
            // 更新播放列表中对应项的时长
            const playlistItems = document.querySelectorAll('.playlist-item');
            if (playlistItems[state.currentIndex]) {
                const durationEl = playlistItems[state.currentIndex].querySelector('.item-duration');
                durationEl.textContent = formatTime(state.duration);
            }
        }

        // 更新播放进度
        function updateProgress() {
            state.currentTime = audioElement.currentTime;
            const progressPercent = (state.currentTime / state.duration) * 100;
            progressBar.style.width = `${progressPercent}%`;
            
            currentTimeEl.textContent = formatTime(state.currentTime);
            audioDuration.textContent = `${formatTime(state.currentTime)} / ${formatTime(state.duration)}`;
        }

        // 切换播放/暂停
        function togglePlayPause() {
            if (state.audioFiles.length === 0) return;
            
            if (state.isPlaying) {
                audioElement.pause();
                state.isPlaying = false;
                playPauseBtn.textContent = '播放';
            } else {
                audioElement.play().then(() => {
                    state.isPlaying = true;
                    playPauseBtn.textContent = '暂停';
                }).catch(error => {
                    console.error('播放错误:', error);
                });
            }
        }

        // 播放上一首
        function playPrevious() {
            let newIndex = state.currentIndex - 1;
            if (newIndex < 0) {
                newIndex = state.audioFiles.length - 1; // 循环到最后一首
            }
            playAudio(newIndex);
        }

        // 播放下一首
        function playNext() {
            let newIndex = state.currentIndex + 1;
            if (newIndex >= state.audioFiles.length) {
                newIndex = 0; // 循环到第一首
            }
            playAudio(newIndex);
        }

        // 设置播放进度
        function setProgress(e) {
            if (state.duration === 0) return;
            
            const width = this.clientWidth;
            const clickX = e.offsetX;
            const clickTime = (clickX / width) * state.duration;
            
            audioElement.currentTime = clickTime;
        }

        // 格式化时间（秒 -> MM:SS）
        function formatTime(seconds) {
            if (isNaN(seconds)) return '--:--';
            
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return `${mins}:${secs < 10 ? '0' : ''}${secs}`;
        }

        // 初始化应用
        document.addEventListener('DOMContentLoaded', initApp);
        
        // 设备就绪事件（Cordova）
        document.addEventListener('deviceready', function() {
            console.log('设备就绪');
            initApp();
        }, false);
    </script>
</body>
</html>
